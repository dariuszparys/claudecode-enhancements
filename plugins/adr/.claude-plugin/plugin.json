{
  "name": "adr",
  "version": "1.2.0",
  "description": "Architecture Decision Records: create ADRs, suggest documenting decisions, auto-lint and regenerate index",
  "author": {
    "name": "Dariusz Parys",
    "url": "https://github.com/dariuszparys"
  },
  "license": "MIT",
  "keywords": ["adr", "architecture-decision-records", "markdown", "linting", "documentation"],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/adr-lint.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/adr-index.sh",
            "once": true
          }
        ]
      }
    ]
  }
}
